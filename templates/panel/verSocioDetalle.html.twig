{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesTables.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

{% endblock %}

{% block hb %}
    <div class="d-flex ms-auto">
        <a href="{{ path('socio_ver') }}" class="btn btn-outline-info me-3">Volver</a>
        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
    </div>
{% endblock %}

{% block main %}
    <div class="container my-5">
        <h3 class="text-center mb-4">Socio {{ socio.nombre }} {{ socio.apellidos }} con ID: {{ socio.id }}</h3>

        <table class="reclamaciones-table2">
            <tr>
                <th>Nombre</th>
                <td>
                    {{ socio.nombre }}
                </td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ socio.apellidos }}</td>
            </tr>
            <tr>
                <th>DNI</th>
                <td>{{ socio.dni }}</td>
            </tr>

            <tr>
                <th>Fecha nacimiento</th>
                <td>{{ socio.fechaNacimiento|date('d/m/Y') }}</td>
            </tr>

            <tr>
                <th>Sexo</th>
                <td>{{ socio.sexo }}</td>
            </tr>

            <tr>
                <th>Dirección</th>
                <td>{{ socio.direccion }}</td>
            </tr>
            <tr>
                <th>Localidad</th>
                <td>{{ socio.localidad }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ socio.provincia }}</td>
            </tr>
            <tr>
                <th>Código Postal</th>
                <td>{{ socio.codigoPostal }}</td>
            </tr>

            <tr>
                <th>Correo</th>
                <td>{{ socio.email }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ socio.telefono }}</td>
            </tr>
            <tr>
                <th>Fecha de registro</th>
                <td>{{ socio.fechaRegistro|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Colectivo</th>
                <td>{{ socio.colectivo }}</td>
            </tr>
            <tr>
                <th>Nº de socio</th>
                <td>{{ socio.numSocio }}</td>
            </tr>
            <tr>
                <th>Modo de pago</th>
                <td>{{ socio.modoPago }}</td>
            </tr>
            <tr>
                <th>IBAN</th>
                <td>{{ socio.iban }}</td>
            </tr>
            <tr>
                <th>Bizum</th>
                <td>{{ socio.bizum }}</td>
            </tr>
            <tr>
                <th>Fecha de pago</th>
                <td>{{ socio.fechaPago|date('d/m/Y') }}</td>
            </tr>

            <tr>
                <th></th>
                <td>
                    <a href="{{ path('socio_editar', { id: socio.id }) }}" class="btn-detalles2"><i
                                class="fa-solid fa-pen-to-square"></i>
                        Editar datos</a>
                    <a href="{{ path('socio_baja', { id: socio.id }) }}" class="btn-baja"
                       onclick="return confirm('¿Estás segura de que quieres dar de baja a este socio?');">
                        <i class="fa-solid fa-trash"></i>
                        Dar de baja</a>

                </td>
            </tr>

        </table>
    </div>

{% endblock %}
