{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesForm.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

{% endblock %}

{% block hb %}
    <div class="d-flex ms-auto">
        <a href="{{ path('admin_panel') }}" class="btn btn-outline-info me-3">Volver</a>
        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
    </div>
{% endblock %}

{% block main %}
    <main class="main-panel">
        <div class="container my-5">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Abrir nueva reclamación</h2>
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.fechaApertura) }}
                        {{ form_widget(form.fechaApertura, {'attr': {'class': 'form-control'}}) }}
                        {% if form.fechaApertura.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.fechaApertura) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.atencion) }}
                        {{ form_widget(form.atencion, {'attr': {'class': 'form-control'}}) }}
                        {% if form.atencion.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.atencion) }}
                            </div>
                        {% endif %}
                    </div>

                <div class="mb-3">
                    {{ form_label(form.socio) }}
                    {{ form_widget(form.socio, {'attr': {'class': 'form-control js-socio-select'}}) }}
                    {% if form.socio.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.socio) }}
                        </div>
                    {% endif %}
                </div>


                <div class="mb-3">
                        {{ form_label(form.esFamiliar) }}
                        {{ form_widget(form.esFamiliar, {'attr': {'class': 'form-check-input ms-2'}}) }}
                        {% if form.esFamiliar.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.esFamiliar) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.familiar) }}
                        {{ form_widget(form.familiar, {'attr': {'class': 'form-control js-familiar-select'}}) }}
                        {% if form.familiar.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.familiar) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.sector) }}
                        {{ form_widget(form.sector, {'attr': {'class': 'form-control'}}) }}
                        {% if form.sector.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.sector) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.prioridad) }}
                        {{ form_widget(form.prioridad, {'attr': {'class': 'form-control'}}) }}
                        {% if form.prioridad.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.prioridad) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.asunto) }}
                        {{ form_widget(form.asunto, {'attr': {'class': 'form-control'}}) }}
                        {% if form.asunto.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.asunto) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.reclamacion) }}
                        {{ form_widget(form.reclamacion, {'attr': {'class': 'form-control', 'rows': '12'}}) }}
                        {% if form.reclamacion.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.reclamacion) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn-orange">
                            Guardar
                        </button>


                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </main>
{% endblock %}
{% block script %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.js-socio-select').select2({
                width: '100%',
                placeholder: 'Selecciona un socio',
            });

        });

        document.addEventListener('DOMContentLoaded', function () {
            $('.js-familiar-select').select2({
                width: '100%',
                placeholder: 'Selecciona un familiar',
            });

        });
    </script>

{% endblock %}