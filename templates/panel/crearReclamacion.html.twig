{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesForm.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li><i class="fa-solid fa-gauge"></i> Panel de control</li>
                <li><i class="fa-solid fa-users"></i> Socios</li>
                <li><i class="fa-solid fa-coins"></i> Cuotas</li>
                <li><i class="fa-solid fa-comments"></i> Consultas</li>
                <li><i class="fa-solid fa-file-lines"></i> Reclamaciones</li>
                <li><i class="fa-solid fa-gear"></i> Configuración</li>
            </ul>
        </aside>

        <main class="rec-panel">
            <div class="top-bar text-end">
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger me-3">Cerrar sesión</a>
            </div>

            <div class="container my-5">
                <div class="card shadow p-4">
                    <h2 class="text-center mb-4">Abrir reclamación</h2>

                    {% for mensaje in app.flashes('error') %}
                        <div class="alert alert-danger">{{ mensaje }}</div>
                    {% endfor %}

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.fechaApertura) }}
                        {{ form_widget(form.fechaApertura, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.atencion) }}
                        {{ form_widget(form.atencion, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.numeroSocio) }}
                        {{ form_widget(form.numeroSocio, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.esFamiliar) }}
                        {{ form_widget(form.esFamiliar, {'attr': {'class': 'form-check-input ms-2'}}) }}
                    </div>

                    <div id="familiar_fields" style="display: none;">
                        <div class="mb-3">
                            {{ form_label(form.familiar.nombre) }}
                            {{ form_widget(form.familiar.nombre, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.apellidos) }}
                            {{ form_widget(form.familiar.apellidos, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.dni) }}
                            {{ form_widget(form.familiar.dni, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.fechaNacimiento) }}
                            {{ form_widget(form.familiar.fechaNacimiento, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.sexo) }}
                            {{ form_widget(form.familiar.sexo, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.direccion) }}
                            {{ form_widget(form.familiar.direccion, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.localidad) }}
                            {{ form_widget(form.familiar.localidad, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.provincia) }}
                            {{ form_widget(form.familiar.provincia, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.codigoPostal) }}
                            {{ form_widget(form.familiar.codigoPostal, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.telefono) }}
                            {{ form_widget(form.familiar.telefono, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.email) }}
                            {{ form_widget(form.familiar.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.relacion) }}
                            {{ form_widget(form.familiar.relacion, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.modoPago) }}
                            {{ form_widget(form.familiar.modoPago, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.iban) }}
                            {{ form_widget(form.familiar.iban, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.bizum) }}
                            {{ form_widget(form.familiar.bizum, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.familiar.fechaPago) }}
                            {{ form_widget(form.familiar.fechaPago, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>


                    <div class="mb-3">
                        {{ form_label(form.sector) }}
                        {{ form_widget(form.sector, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.prioridad) }}
                        {{ form_widget(form.prioridad, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.asunto) }}
                        {{ form_widget(form.asunto, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.reclamacion) }}
                        {{ form_widget(form.reclamacion, {'attr': {'class': 'form-control', 'rows': '12'}}) }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn-orange">
                            Guardar
                        </button>
                        <button type="button" class="btn-blue">
                            <a href="{{ path('admin_panel') }}" >Volver</a>
                        </button>

                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const checkbox = document.querySelector('#{{ form.esFamiliar.vars.id }}');
            const familiarFields = document.querySelector('#familiar_fields');

            if (checkbox.checked) {
                familiarFields.style.display = 'block';
            }

            checkbox.addEventListener('change', function () {
                familiarFields.style.display = checkbox.checked ? 'block' : 'none';
            });
        });
    </script>
{% endblock %}
