{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesTables.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gauge"></i> Panel de control
                    </a>
                </li>

                <li>
                    <a href="{{ path('socio_ver') }}">
                        <i class="fa-solid fa-users"></i> Socios
                    </a>
                </li>
                <li>
                    <a href="{{ path('cuota_ver') }}">
                        <i class="fa-solid fa-coins"></i> Cuotas
                    </a>
                </li>
                <li>
                    <a href="{{ path('consultas_ver') }}">
                        <i class="fa-solid fa-comments"></i> Consultas
                    </a>
                </li>
                <li>
                    <a href="{{ path('reclamacion_ver') }}">
                        <i class="fa-solid fa-file-lines"></i> Reclamaciones
                    </a>
                </li>
            </ul>
        </aside>

        <main class="main-panel">
            <div class="top-bar text-end">
                <a href="{{ path('reclamacion_ver') }}" class="btn btn-outline-info me-3">Volver</a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="container my-5">
                <h3 class="text-center mb-4">Reclamación con ID: {{ reclamacion.id }}</h3>

                <table class="reclamaciones-table2">
                    <tr>
                        <th>Nombre</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.nombre : reclamacion.socio.nombre }}
                        </td>
                    </tr>
                    <tr>
                        <th>Apellidos</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.apellidos : reclamacion.socio.apellidos }}</td>
                    </tr>
                    <tr>
                        <th>Correo</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.email : reclamacion.socio.email }}</td>
                    </tr>
                    <tr>
                        <th>Teléfono</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.telefono : reclamacion.socio.telefono }}</td>
                    </tr>
                    <tr>
                        <th>DNI</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.dni : reclamacion.socio.dni }}</td>
                    </tr>
                    <tr>
                        <th>Número Socio</th>
                        <td>{{ reclamacion.numeroSocio }}</td>
                    </tr>
                    <tr>
                        <th>Asunto</th>
                        <td>{{ reclamacion.asunto }}</td>
                    </tr>
                    <tr>
                        <th>Fecha de apertura</th>
                        <td>{{ reclamacion.fechaApertura|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Fecha de cierre</th>
                        <td>
                            {{ reclamacion.fechaCierre ? reclamacion.fechaCierre|date('d/m/Y') : 'Sin cerrar' }}
                            {% if reclamacion.estado != 'resuelta' %}

                                <form method="post" action="{{ path('reclamacion_cerrar', { id: reclamacion.id }) }}" onsubmit="return confirm('¿Seguro que quieres cerrar esta reclamación?');" style="display: inline;">
                                    <button class="btn-detalles">
                                        Cerrar <i class="bi bi-lock"></i>
                                    </button>
                                </form>

                            {% endif %}
                        </td>

                    </tr>
                    <tr>
                        <th>Sector</th>
                        <td>{{ reclamacion.sector }}</td>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <td>
                            <form method="post" action="{{ path('reclamacion_cambiar_estado', { id: reclamacion.id }) }}">
                                <select name="estado" class="form-select form-select-sm d-inline w-auto me-2">
                                    <option value="Pendiente" {{ reclamacion.estado == 'Pendiente' ? 'selected' : '' }}>Pendiente</option>
                                    <option value="Asignada" {{ reclamacion.estado == 'Asignada' ? 'selected' : '' }}>Asignada</option>
                                    <option value="Resuelta" {{ reclamacion.estado == 'Resuelta' ? 'selected' : '' }}>Resuelta</option>
                                </select>
                                {% if reclamacion.estado != 'resuelta' %}
                                <button type="submit" class="btn-detalles"><i class="bi bi-arrow-left-right"></i> Cambiar</button>
                                {% endif %}
                            </form>
                        </td>

                    </tr>
                    <tr>
                        <th>¿Es familiar?</th>
                        <td>{{ reclamacion.esFamiliar ? 'Sí' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Forma de pago</th>
                        <td>{{ reclamacion.esFamiliar ? reclamacion.familiar.modoPago : reclamacion.socio.modoPago }}</td>
                    </tr>
                    <tr>
                        <th>Reclamación</th>
                        <td style="white-space: pre-wrap;">{{ reclamacion.reclamacion }}</td>
                    </tr>
                    <tr>
                        <th>Asignado a</th>
                        <td>
                            {% if reclamacion.admins is empty %}
                                Sin asignar
                            {% else %}
                                {% for admin in reclamacion.admins %}
                                    {{ admin.nombre }} {{ admin.apellidos }}<br>
                                {% endfor %}
                            {% endif %}

                            <form method="post" action="{{ path('reclamacion_cambiar_asignacion', { id: reclamacion.id }) }}" class="mt-2">
                                <select name="admins" class="form-select form-select-sm d-inline w-auto me-2">
                                    {% for admin in admins %}
                                        <option value="{{ admin.id }}">{{ admin.nombre }} {{ admin.apellidos }}</option>
                                    {% endfor %}
                                </select>
                                <button type="submit" class="btn-detalles"><i class="bi bi-arrow-left-right"></i> Cambiar</button>
                            </form>
                        </td>

                    </tr>
                    <tr>
                        <th>Seguimiento</th>
                        <td>
                            {% for entrada in reclamacion.seguimientos %}
                                <div class="seguimiento-item" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                    <span>{{ entrada.fecha|date('d/m/Y') }} - {{ entrada.comentario }}</span>
                                    <form method="post" action="{{ path('seguimiento_eliminar', { id: entrada.id }) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este seguimiento?');" style="margin: 0;">
                                        <button class="btn-detalles" style="display: flex; align-items: center; gap: 4px;">
                                            Eliminar <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            {% else %}
                                <span>No hay seguimientos registrados.</span>
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                    <th>Añadir seguimiento</th>
                        <td>
                            <form method="post" action="{{ path('reclamacion_nuevo_estado', { id: reclamacion.id }) }}">
                                <div class="d-flex gap-2">
                                    <input type="date" name="fecha" class="form-control" required>
                                    <input type="text" name="comentario" class="form-control" placeholder="Comentario" required>
                                </div>
                                <br>
                                <button type="submit" class="btn-detalles2"><i class="bi bi-save"></i> Guardar nuevo estado</button>
                            </form>
                        </td>
                    </tr>
                </table>


            </div>
        </main>
    </div>
{% endblock %}
