{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesTables.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gauge"></i> Panel de control
                    </a>
                </li>

                <li>
                    <a href="{{ path('socio_ver') }}">
                        <i class="fa-solid fa-users"></i> Socios
                    </a>
                </li>
                <li>
                    <a href="{{ path('cuota_ver') }}">
                        <i class="fa-solid fa-coins"></i> Cuotas
                    </a>
                </li>
                <li>
                    <a href="{{ path('consultas_ver') }}">
                        <i class="fa-solid fa-comments"></i> Consultas
                    </a>
                </li>
                <li>
                    <a href="{{ path('reclamacion_ver') }}">
                        <i class="fa-solid fa-file-lines"></i> Reclamaciones
                    </a>
                </li>
            </ul>
        </aside>

        <main class="main-panel">
            <div class="top-bar text-end">
                <a href="{{ path('admin_panel') }}" class="btn btn-outline-info me-3">Volver</a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesi√≥n</a>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="container my-5">

                    <h2 class="text-center mb-4">Listado de Consultas</h2>
                <div class="tabla-scroll">
                    <table class="reclamaciones-table2">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Asunto</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for consulta in consultas %}
                            <tr>
                                <td>{{ consulta.id }}</td>
                                <td>
                                    {{ consulta.nombre }}
                                    {% if consulta.socio %}
                                        (Socio)
                                    {% elseif consulta.familiar %}
                                        (Familiar)
                                    {% endif %}
                                </td>
                                <td>{{ consulta.apellidos }}</td>
                                <td>{{ consulta.asunto }}</td>
                                <td>{{ consulta.fechaApertura|date('d/m/Y') }}</td>
                                <td>
                                    <span class="estado estado-{{ consulta.estado|lower|replace({' ': '-'}) }}">
                                        {{ consulta.estado }}</span>
                                </td>
                                <td><a href="{{ path('consulta_detalle', {id: consulta.id}) }}" class="btn-detalles">
                                        <i class="fa fa-eye"></i> Detalles</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="text-center">No hay consultas registradas.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
