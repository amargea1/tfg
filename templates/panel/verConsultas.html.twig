{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesTables.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li><i class="fa-solid fa-gauge"></i> Panel de control</li>
                <li><i class="fa-solid fa-users"></i> Socios</li>
                <li><i class="fa-solid fa-coins"></i> Cuotas</li>
                <li><i class="fa-solid fa-comments"></i> Consultas</li>
                <li><i class="fa-solid fa-file-lines"></i> Reclamaciones</li>
                <li><i class="fa-solid fa-gear"></i> Configuración</li>
            </ul>
        </aside>

        <main class="main-panel">
            <div class="top-bar text-end">
                <a href="{{ path('admin_panel') }}" class="btn btn-outline-info me-3">Volver</a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
            </div>

            <div class="container my-5">

                    <h2 class="text-center mb-4">Listado de Reclamaciones</h2>

                    <table class="reclamaciones-table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Asunto</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for consulta in consultas %}
                            <tr>
                                <td>{{ consulta.id }}</td>
                                <td>{{ consulta.nombre }}</td>
                                <td>{{ consulta.apellidos }}</td>
                                <td>{{ consulta.asunto }}</td>
                                <td>{{ consulta.fechaApertura|date('d/m/Y') }}</td>
                                <td>
                                    <span class="estado estado-{{ reclamacion.estado|lower|replace({' ': '-'}) }}">
                                        {{ reclamacion.estado }}</span>
                                </td>
                                <td><a href="{{ path('reclamacion_detalle', {id: reclamacion.id}) }}" class="btn-detalles">Detalles</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="text-center">No hay reclamaciones registradas.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

        </main>
    </div>
{% endblock %}
