{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesForm.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gauge"></i> Panel de control
                    </a>
                </li>

                <li>
                    <a href="{{ path('socio_ver') }}">
                        <i class="fa-solid fa-users"></i> Socios
                    </a>
                </li>
                <li>
                    <a href="{{ path('cuota_ver') }}">
                        <i class="fa-solid fa-coins"></i> Cuotas
                    </a>
                </li>
                <li>
                    <a href="{{ path('consultas_ver') }}">
                        <i class="fa-solid fa-comments"></i> Consultas
                    </a>
                </li>
                <li>
                    <a href="{{ path('reclamacion_ver') }}">
                        <i class="fa-solid fa-file-lines"></i> Reclamaciones
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gear"></i> Configuración
                    </a>
                </li>

            </ul>
        </aside>

        <main class="main-panel">
            <div class="top-bar text-end">
                <a href="{{ path('cuota_ver') }}" class="btn btn-outline-info me-3">Volver</a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="container my-5">
                <div class="card shadow p-4">
                    <h2 class="text-center mb-4">Editar cuota con ID: {{ cuota.id }}</h2>

                    {% for mensaje in app.flashes('error') %}
                        <div class="alert alert-danger">{{ mensaje }}</div>
                    {% endfor %}

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.importe) }}
                        {{ form_widget(form.importe, {'attr': {'class': 'form-control'}}) }}
                        {% if form.importe.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.importe) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.tipo) }}
                        {{ form_widget(form.tipo, {'attr': {'class': 'form-control'}}) }}
                        {% if form.tipo.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.tipo) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.periodicidad) }}
                        {{ form_widget(form.periodicidad, {'attr': {'class': 'form-control'}}) }}
                        {% if form.periodicidad.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.periodicidad) }}
                            </div>
                        {% endif %}
                    </div>



                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn-orange">
                            Guardar
                        </button>


                    </div>


                    {{ form_end(form) }}
                </div>
            </div>



        </main>
    </div>
{% endblock %}
