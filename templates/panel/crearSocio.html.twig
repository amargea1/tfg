{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesForm.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <aside class="sidebar">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo">
            <ul class="menu">
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gauge"></i> Panel de control
                    </a>
                </li>

                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-users"></i> Socios
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-coins"></i> Cuotas
                    </a>
                </li>
                <li>
                    <a href="{{ path('consultas_ver') }}">
                        <i class="fa-solid fa-comments"></i> Consultas
                    </a>
                </li>
                <li>
                    <a href="{{ path('reclamacion_ver') }}">
                        <i class="fa-solid fa-file-lines"></i> Reclamaciones
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_panel') }}">
                        <i class="fa-solid fa-gear"></i> Configuración
                    </a>
                </li>

            </ul>
        </aside>

        <main class="rec-panel">
            <div class="top-bar text-end">
                <a href="{{ path('admin_panel') }}" class="btn btn-outline-info me-3">Volver</a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesión</a>
            </div>


            <div class="container my-5">
                <div class="card shadow p-4">
                    <h2 class="text-center mb-4">Crear socio</h2>

                    {% for mensaje in app.flashes('error') %}
                        <div class="alert alert-danger">{{ mensaje }}</div>
                    {% endfor %}

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.apellidos) }}
                        {{ form_widget(form.apellidos, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.dni) }}
                        {{ form_widget(form.dni, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fechaNacimiento) }}
                        {{ form_widget(form.fechaNacimiento, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.sexo) }}
                        {{ form_widget(form.sexo, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.direccion) }}
                        {{ form_widget(form.direccion, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.localidad) }}
                        {{ form_widget(form.localidad, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.provincia) }}
                        {{ form_widget(form.provincia, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.codigoPostal) }}
                        {{ form_widget(form.codigoPostal, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.telefono) }}
                        {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fechaRegistro) }}
                        {{ form_widget(form.fechaRegistro, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.ordenRegistro) }}
                        {{ form_widget(form.ordenRegistro, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.colectivo) }}
                        {{ form_widget(form.colectivo, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.numSocio) }}
                        {{ form_widget(form.numSocio, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.modoPago) }}
                        {{ form_widget(form.modoPago, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.iban) }}
                        {{ form_widget(form.iban, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.bizum) }}
                        {{ form_widget(form.bizum, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fechaPago) }}
                        {{ form_widget(form.fechaPago, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn-orange">
                            Guardar
                        </button>


                    </div>


                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>


{% endblock %}

