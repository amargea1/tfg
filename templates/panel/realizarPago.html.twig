{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/stylesForm.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
{% endblock %}

{% block hb %}
    <div class="d-flex ms-auto">
        <a href="{{ path('cuota_ver') }}" class="btn btn-outline-info me-3">Volver</a>
        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Cerrar sesi√≥n</a>
    </div>
{% endblock %}

{% block main %}
    <main class="main-panel">
        <div class="container my-5">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Pagar cuota para socio {{ socio.nombre }} {{ socio.apellidos }}</h2>

                {% for mensaje in app.flashes('error') %}
                    <div class="alert alert-danger">{{ mensaje }}</div>
                {% endfor %}

                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.modoPago) }}
                    {{ form_widget(form.modoPago, {'attr': {'class': 'form-control'}}) }}
                    {% if form.modoPago.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.modoPago) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.iban) }}
                    {{ form_widget(form.iban, {'attr': {'class': 'form-control'}}) }}
                    {% if form.iban.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.iban) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.bizum) }}
                    {{ form_widget(form.bizum, {'attr': {'class': 'form-control'}}) }}
                    {% if form.bizum.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.bizum) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.fechaPago) }}
                    {{ form_widget(form.fechaPago, {'attr': {'class': 'form-control'}}) }}
                    {% if form.fechaPago.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.fechaPago) }}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn-orange">
                        Guardar
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}
